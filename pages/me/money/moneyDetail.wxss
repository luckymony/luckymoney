.container {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 32rpx;
}

.nav{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
}

.default{
  flex: 1;
  line-height: 100rpx;
  text-align: center;
  border-right: 1px solid gainsboro;
  color: #FFA500;
  font-weight: bold;
  background-color: #fff
}

.orange{
  flex: 1;
  line-height: 100rpx;
  text-align: center;
  color:white;
  font-weight: bold;
  background-color: #FFA500
}

.empty-view {
  height: 20rpx;
  width: 100%;
  background-color: #eee;
}

.userinfo {
	display: flex;
	flex-direction: column;
	align-items: center;
  width: 100%;
  background-color: #fff;
}

.userinfo-avatar {
	width: 160rpx;
	height: 160rpx;
	margin-top: 40rpx;
	border-radius: 50%;
  border: 8rpx solid #F44848;
}

.show{
  display: block;
  text-align: center;
  padding: 20rpx;
}

.hidden{
  display: none;
  text-align: center;
  padding: 20rpx;
}

.page-section{
  width: 100%;
}

.userinfo-money {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  text-align: center;
  background-color: white;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
}

.money-text {
  margin-top: 20rpx;
  font-size: 40rpx;
  font-weight: bolder;
}

.userinfo-money1-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  /* background-color: green; */
}

.list-result{  
  flex: auto;  
  position: relative;  
}  

.list-item{
  display: flex;
  flex-direction: column;
  background-color: white;
  height: 120rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.list-items-top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 119rpx;
  background-color: white;
}

.list-items-play{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.list-items-play-name{
  flex: 1;
  font-size: 35rpx;
}

.list-items-play-time{
  flex: 1;
  margin-top: 10rpx;
  color: gray;
  font-size: 30rpx;
}

.list-items-money{
  height: 100%;
  font-size: 40rpx;
  /* background-color: orange; */
}

.list-item-line{
  background-color: #eee;
  height: 1rpx;
  width: 100%；
}

/* 隐藏滑动条 */
::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}

.load-more {
  display: flex;
  flex-direction:column;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  background-color: white;
}

.load-more-top {
  flex: 1;
  display: flex;
  flex-direction:row;
  align-items: center;
  justify-content: center;
}

.load-more image {
  margin-right: 10rpx;
  width: 40rpx;
  height: 40rpx;
}

.no-data-view {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  position:fixed;
  bottom:10vw;
  /* background-color: red; */
}

.no-data-image {
  width: 30vw;
  height: 30vw;
}

.no-data-view text {
  margin-top: 20rpx;
  color: #ccc;
}