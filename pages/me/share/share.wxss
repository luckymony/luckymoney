/* pages/me/share.wxss */
.main-view {
  height: 100vh;
  width: 100%;
  background-color: white;
  display: flex; 
  flex-direction:column;
  /* align-items:center;
  justify-content: center; */
}
.icon-view {
  height: 20vh;
  width: 100vw;
  display: flex; 
  flex-direction:column;
  align-items:center;
  justify-content: center;
  /* background-color: orange; */
}
.icon-view image {
	width: 160rpx;
	height: 160rpx;
	border-radius: 50%;
  border: 8rpx solid #F44848;
}

.lucky-label {
  width: 80%;
  margin-left: 10%;
  margin-right: 10%;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  font-size: 60rpx;
  text-align: center;
  justify-content: center;
  align-items: center;
  color: orange;
  /* background-color: red; */
}

.qr-code {
  width: 100vw;
  height: 30vh;
  display: flex; 
  flex-direction:column;
  align-items:center;
  justify-content: center;
  /* background-color: orange; */
}

.qr-code image {
  width: 200rpx;
	height: 200rpx;
	border-radius: 20rpx;
}

.share-button {
  width: 80vw;
  height: 10vh;
  margin-left: 10vw;
  margin-right: 10vw;
  display: flex; 
  flex-direction:column;
  justify-content: center;
}