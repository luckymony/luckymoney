.container {
  display: flex;
  flex-direction: column;
  min-height: 100%;
  justify-content: space-between;
  font-size: 32rpx;
  background-color: lightgray;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}

.userinfo {
	display: flex;
	flex-direction: column;
	padding: 50rpx 0;
	align-items: center;
  width: 750rpx;
}

.page-section{
  width: 100%;
  margin-bottom: 60rpx;
}

.list-section{
  background-color: white;
  width: 100%;
  height: 100%;
  margin-top: 60rpx;
  max-height: 500rpx;
}

.list-item{
  padding: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center
}

.list-items-name{
  display: flex;
  flex-direction: column;
  flex-grow: 1
}

.list-items-name-name{
  font-size: 35rpx;
}
.list-items-name-time{
  
  padding-top: 20rpx;
  font-size: 30rpx;
}

.list-items-money{
  font-size: 50rpx;
}

.list-item-line{
  background-color: lightgray;
  height: 1px;
  width: 100%；
}

.userinfo-avatar {
	width: 160rpx;
	height: 160rpx;
	margin: 20rpx;
	border-radius: 50%;
}
.redp-avatar {
	width: 50rpx;
	height: 60rpx;
}

.userinfo-money {
  display: flex;
  justify-content: space-around
}

.userinfo-money1-item {
  display: flex;
  flex-direction: column;
}
.userinfo-money2-item {
   display: flex;
   flex-direction: column
}

.userinfo-nickname {
  margin-top: 20rpx;
  color: #FFF;
}

/* 隐藏滑动条 */
::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}