  display: flex;
  flex-direction:column;
  height: 60%;
  margin-left: 4.5vw;
  margin-right: 4.5vw;
}
.one-line {
  flex: 1;
  display: flex; 
  flex-direction:column;
  width: 100%;
  margin-top: 10rpx;
}
.one-input {
  flex: 1;
  display:flex;
  align-items:center;
  justify-content: space-evenly;
  /* background-color: orange; */
}
.one-input input {
  width: 80%;
  height: 80%;
