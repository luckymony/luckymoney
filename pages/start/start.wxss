.start-main {
  margin-top: 32rpx;
  margin-left: 4.5vw;
  margin-right: 4.5vw; 
  height: 85vh;
  width: 91vw;
  border-radius: 10rpx;
  background-color: #eee;
  box-shadow: 5px 5px 5px gainsboro;
  display: flex;
  flex-direction:column;
}

