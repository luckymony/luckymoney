/* 隐藏滑动条 */
::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}

.page-body {
  display: flex;
  flex-direction: column;
}

.list-item {
  display: flex;
  flex-direction:column;
  align-items: center;
	margin: 32rpx 32rpx;
  height: 260rpx;
}
.lucky-money-view {
  display: flex;
  flex-direction:row;
  width: 100%;
  height: 80%;
}
.time-view {
  display: flex;
  flex-direction:column;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  font-size: 24rpx;
  color: white;
  padding-left: 10rpx;
  padding-right: 10rpx;
  height: 20%;
  background-color: lightgray;
  border-radius: 10rpx;
}
.item-left-view {
  display: flex;
  flex-direction:row;
  width: 120rpx;
  height: 100%;
}
.me-item-right-view {
  display: flex;
  flex-direction:row;
  width: 120rpx;
  height: 100%;
}
.icon-view {
  width: 88rpx;
  height: 88rpx;
  border-radius: 10rpx;
}
.left-arrow{
  margin-top: 30rpx;
  flex: 1;
  width: 0;
  height: 0;
  border-top: 16rpx solid transparent;
  border-right: 25rpx solid #F89B4A;
  border-bottom: 16rpx solid transparent;
}
.right-arrow {
  margin-top: 30rpx;
  flex: 1;
  width: 0;
  height: 0;
  border-top: 16rpx solid transparent;
  border-left: 25rpx solid #F89B4A;
  border-bottom: 16rpx solid transparent;
}
.item-right-view {
  flex:1;
  height: 100%;
	border-radius: 10rpx;
  background-color: #fff;
}
.item-top-view {
  height: 80%;
  display: flex;
  flex-direction:row;
  align-items: center;
  border-top-left-radius:10rpx;
  border-top-right-radius:10rpx;
  background-color: #F89B4A;
  color: white;
  font-size: 40rpx;
}
.item-top-view i-icon {
  margin-left: 20rpx;
}
.item-bottom-view {
  height: 20%;
  display: flex;
  flex-direction:column;
  justify-content: center;
  /* background-color: greenyellow; */
}
.item-bottom-left {
  font-size: 24rpx;
  color: #ccc;
  margin-left: 20rpx;
}
.item-bottom-right {
  font-size: 24rpx;
  color: #ccc;
  text-align:right;
  margin-right: 20rpx;
}