<!--pages/rob/rob.wxml-->
<scroll-view class="main-vew" scroll-y="true">
<view class="top-view">
<image class="icon-image"></image>
<text class="name-text">{{'张三丰'}}</text>
<text class="bless-text">{{'恭喜发财,大吉大利'}}</text>
</view>
<view class="mid-view">
<button type="primary" class="start-button">开始游戏</button>
<view class="my-money" bindtap="toMyMoney">
<i-icon type="redpacket_fill" size="20" color="#efb336"/>
<text>我的红包</text>
</view>
</view>
<view class="buttom-view">
<view class="item-view" wx:for="{{currentItems}}" wx:for-item="data" wx:for-index="index">
<image src="{{data.icon}}" class="item-icon"></image>
<view class="item-view-name">
<text>{{data.name}}</text>
<text>{{data.time}}</text>
</view>
<view class="item-view-money">
<text>{{data.money}}</text>
<image src="../../../images/rob/{{'paihang' + (index%3+1) + '.png'}}" class="{{index <= 2 ?'show-image':'hidden-image'}}"></image>
</view>
</view>
</view>
  <loadMore id="loadMoreView" bindloadMoreListener='loadMoreListener' bindclickLoadMore='clickLoadMore' hasMore = true></loadMore>
</scroll-view>