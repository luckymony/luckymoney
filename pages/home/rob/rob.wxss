/* pages/rob/rob.wxss */
.main-view {
  height: 100%;
  width: 100vw;
}
.top-view {
  height: 40vh;
  width: 100vw;
  /* background-color: red; */
  display: flex; 
  flex-direction:column;
  /* justify-content: center; */
  align-items:center;
}
.mid-view {
  height: 20vh;
  width: 100vw;
  /* background-color: olivedrab; */
  display: flex; 
  flex-direction:column;
  justify-content: center;
}
.buttom-view {
  flex: 1;
  width: 100vw;
  /* background-color: blue; */
  display: flex;
	flex-direction:column;
}
.icon-image {
  margin-top: 40rpx;
  width: 200rpx;
  height: 200rpx;
  background-color: orange;
  border-radius: 100rpx;
}
.name-text {
  margin-top: 20rpx;
  /* background-color: burlywood; */
}
.bless-text {
  font-size: 60rpx;
  margin-top: 20rpx;
  font-weight:bold;
  /* background-color: blue; */
}
.start-button {
  /* background-color: green; */
  color: white;
  width: 50vw;
  height: 89rpx;
}

.my-money {
  display: flex; 
  flex-direction:row;
  justify-content: center;
  align-items:center;
  margin-top: 20rpx;
}

.mid-view text {
  /* margin-top: 20rpx; */
  color:#efb336;
  /* background-color: red; */
  text-align: center;
  font-size: 28rpx;
}
.item-view{
  display: flex;
  flex-direction:row;
  /* justify-content: space-between;    */
  align-items: center;
  background-color: #fff;
  margin-bottom: 10rpx;
  /* width: 98vw; */
  height: 120rpx;
  margin-left : 20rpx;
  margin-right : 20rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  border-radius: 4rpx;
}
.item-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  margin-right: 18rpx;
}
.item-view-name {
  flex: 1;
  /* background-color: orange; */
  display: flex;
  flex-direction:column;  
  color: black;
  font-size: 28rpx;
}
.item-view-money {
  display: flex;
  flex-direction:column;
  align-items: center;
  /* background-color: orange; */
}
.show-image {
  /* background-color: red; */
  width: 50rpx;
  height: 50rpx;
  opacity:1.0;
}
.hidden-image {
   width: 50rpx;
  height: 50rpx;
  opacity:0.0;
}
.foot-view{
  /* background-color: orange; */
  margin-bottom: 10rpx;
  width: 100vw;
  height: 40rpx;
  font-size: 24rpx;
  text-align: center;
  color: black;
}
