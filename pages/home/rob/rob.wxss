/* pages/rob/rob.wxss */
.main-view {
  display: flex;
  flex-direction: column;
}
/* 隐藏滚动条 */
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

.top-view {
  height: 100vh;
  width: 100vw;
  display: flex; 
  flex-direction:column;
  align-items:center;
  background-color: #EB5646;
  /* border-bottom-right-radius: 40rpx; */
  /* border-bottom-left-radius: 40rpx; */
} 

.icon-view {
  flex: 1;
  display: flex; 
  flex-direction:column;
  align-items:center;
  /* background-color: green; */
}

.icon-center-view {
  flex: 1;
  display: flex; 
  flex-direction:column;
  align-items:center;
  justify-content: center;
  /* background-color: greenyellow; */
}

.button-view {
  flex: 1;
  display: flex; 
  flex-direction:row;
  align-items:center;
  /* background-color: blue; */
}

.icon-image {
  width: 150rpx;
	height: 150rpx;
	border-radius: 50%;
  background-color: #F89B4A;
  border: 10rpx solid #F44848;
}
.name-text {
  margin-top: 20rpx;
  padding: 15rpx;
  background-color: brown;
  color: white;
  font-size: 24rpx;
  border-radius: 30rpx;
}

.icon-center-image {
  flex: 1;
}

.bless-text {
  font-size: 60rpx;
  margin-top: 20rpx;
  color: white;
  font-weight:bold;
}
.game-text {
  font-size: 40rpx;
  margin-top: 20rpx;
  color:white;
  font-weight:bold;
}
.start-button {
  color: rgb(202, 136, 78);
  width: 200rpx;
  height: 200rpx;
  text-align: center;
  line-height: 200rpx;
  font-size: 80rpx;
  font-weight: bold;
  border-radius: 50%;
  background-color: rgb(248, 185, 130);
  border: 10rpx solid rgb(236, 173, 118);
}
.send-packet {
  margin-right: 40rpx;
  display: flex; 
  flex-direction:column;
  justify-content: center;
  align-items:center;
  /* background-color: blue; */
}
.send-packet-button {
  display: flex; 
  flex-direction:column;
  justify-content: center;
  align-items:center;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: rgb(248, 185, 130);
  border: 5rpx solid rgb(236, 173, 118);
}
.send-packet-text {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: rgb(248, 185, 130);
}

.share-packet {
  margin-left: 40rpx;
  display: flex; 
  flex-direction:column;
  justify-content: center;
  align-items:center;
}

.share-packet-button {
  display: flex; 
  flex-direction:column;
  justify-content: center;
  align-items:center;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: rgb(248, 185, 130);
  border: 5rpx solid rgb(236, 173, 118);
}

.share-packet-text {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: rgb(248, 185, 130);
}

.circular-view {
  width: 100%;
  height: 200rpx;
  background-color: #EB5646;
  border-bottom-left-radius: 50%;
  border-bottom-right-radius: 50%;
  display: flex; 
  flex-direction:row;
  justify-content: center;
  /* align-items: center; */
}

.circular-view image {
  margin-top: 30rpx;
  margin-left: -30rpx;
  width: 50rpx;
  height: 50rpx;
}

.circular-view text {
  margin-top: 30rpx;
  margin-left: 20rpx;
  color: white;
  font-size: 40rpx;
}

.my-view {
  margin-top: -80rpx;
  height: 200rpx;
  background-color: white;
  border-radius: 20rpx;
  margin-left : 20rpx;
  margin-right : 20rpx;
  display: flex; 
  flex-direction:row;
  justify-content: center;
  font-size: 30rpx;
}

.my-left-view {
  flex: 1;
  display: flex; 
  flex-direction:column;
  justify-content: center;
  align-items: center;
  /* background-color: red; */
}

.my-rank-money {
  color: #efb336;
}

.my-center-view {
  flex: 1;
  display: flex; 
  flex-direction:column;
  justify-content: center;
  align-items: center;
  /* background-color: blue; */
}

.my-center-view image {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 10rpx;
  border-radius: 50rpx;
}

.my-right-view {
  flex: 1;
  display: flex; 
  flex-direction:column;
  justify-content: center;
  align-items: center;
  /* background-color: orange; */
}

.head-view {
  margin-top: 20rpx;
  height: 100rpx;
  background-color: white;
  margin-left : 20rpx;
  margin-right : 20rpx;
  border-top-right-radius: 20rpx; 
  border-top-left-radius: 20rpx;
  display: flex; 
  flex-direction:column;
  justify-content: center;
}

.title-view {
  height: 59rpx;
  display: flex; 
  flex-direction:row;
  justify-content: space-between;
  padding-left: 40rpx;
  padding-right: 40rpx;
  font-size: 30rpx;
}

.line-view {
  height: 1rpx;
  background-color: #eee;
  margin-left : 40rpx;
  margin-right : 40rpx;
}

.buttom-view {
  width: 100vw;
  display: flex;
	flex-direction:column;
}

.load-more-view {
  background-color: white;
  height: 100rpx;
  margin-left : 20rpx;
  margin-right : 20rpx;
  border-bottom-right-radius: 20rpx; 
  border-bottom-left-radius: 20rpx;
}

.margin-bottom {
  margin-bottom: 20rpx;
}

.my-money {
  display: flex; 
  flex-direction:row;
  justify-content: center;
  align-items:center;
  margin-top: 20rpx;
}

.mid-view text {
  color:#efb336;
  text-align: center;
  font-size: 28rpx;
}

.item-view{
  display: flex;
  flex-direction:row;
  background-color: #fff;
  height: 120rpx;
  margin-left : 20rpx;
  margin-right : 20rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
}

.last-item-view {
  border-bottom-right-radius: 20rpx; 
  border-bottom-left-radius: 20rpx;
}

.rank-view {
  width: 100rpx;
  text-align: center;
  /* background-color: red; */
}

.rank-view text {
  line-height: 120rpx;
}

.user-view {
  flex: 1;
  display: flex;
  flex-direction:row;
  justify-content: center;
  /* background-color: blue; */
}

.user-view text {
  margin-left: 20rpx;
  line-height: 120rpx;
  color: #999;
}

.money-view {
  width: 150rpx;
  line-height: 120rpx;
  text-align: center;
  color:#efb336;
  /* background-color: orange; */
}

.item-icon {
  margin-left: -30rpx;
  margin-top: 10rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}

.item-view-name {
  flex: 1;
  display: flex;
  flex-direction:column;  
  color: black;
  font-size: 28rpx;
}

.item-view-money {
  display: flex;
  flex-direction:column;
  align-items: center;
}

.show-image {
  margin-top: 35rpx;
  width: 50rpx;
  height: 50rpx;
  opacity:1.0;
}

.hidden-image {
  width: 50rpx;
  height: 50rpx;
  opacity:0.0;
}

.tip-text {
   font-size: 24rpx;
}
.foot-view{
  margin-bottom: 10rpx;
  width: 100vw;
  height: 40rpx;
  font-size: 24rpx;
  text-align: center;
  color: black;
}
.load-more {
  display: flex;
  flex-direction:row;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  margin-left : 20rpx;
  margin-right : 20rpx;
  background-color: white;
  border-bottom-right-radius: 20rpx; 
  border-bottom-left-radius: 20rpx;
}
.load-more image {
  margin-right: 10rpx;
  width: 40rpx;
  height: 40rpx;
}