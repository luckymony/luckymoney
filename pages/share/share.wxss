/* pages/share/share.wxss */
.main-view {
  height: 100vh;
  width: 100vw;
  display: flex;
  flex-direction:column;
  align-items: center;
}

.bg-view {
  margin-top: 10vh;
  width: 80vw;
  height: 70vh;
  border-radius: 10rpx;
  background-color: #EB5646;
  display: flex;
  flex-direction:column;
  align-items: center;
}

.first-view {
  flex: 1;
  display: flex;
  flex-direction:column;
  align-items: center;
  width: 100%;
  /* background-color: green; */
}

.circle-view {
  width: 100%;
  height: 25%;
  background-color: rgb(224, 91, 77);
  border-top-left-radius:10rpx;
  border-top-right-radius:10rpx;
  border-bottom-left-radius: 50%;
  border-bottom-right-radius: 50%;
}

.icon-image {
  margin-top: -75rpx;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  border: 10rpx solid rgb(236, 173, 118);
  background-color: olivedrab;
}

.name-text {
  margin-top: 20rpx;
  padding: 15rpx;
  background-color: brown;
  color: white;
  font-size: 24rpx;
  border-radius: 30rpx;
}

.lucky-text {
  font-size: 60rpx;
  margin-top: 20rpx;
  color: white;
  font-weight:bold;
}

.second-view {
   flex: 1;
   width: 100%;
   display: flex;
   flex-direction:column;
   align-items: center;
   justify-content: center;
  /* background-color: blue; */
}

.qrCode-image {
  max-width: 80%;
  max-height: 80%;
  /* background-color: greenyellow; */
}

.share-view {
  margin-top: 5vh;
  width: 50%;
  height: 100rpx;
  background-color: #EB5646;
  border-radius: 50rpx;
}

.share-view text {
  font-size: 40rpx;
  color: white;
  text-align: center;
  line-height: 100rpx;
}