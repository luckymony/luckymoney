/* pages/mine/mine.wxss */

.view-login {
    width: 100%;
    display: flex; justify-content: center; align-items: center;
    flex-direction: column;
    margin-top: 50px;
}

.view-login image {
    width: 108px;
    height: 83px;
    align-self: center;
}

.view-login view:nth-child(2) {
    margin-top: 10px;
    font-size: 18px;
    align-self: center;
    color: #1A4875;
}

.view-item {
    margin-top: 20px;
    box-shadow: 0 1px 2px 0 rgba(0,0,0,.05);
    border: 1px solid #eee;
    display: flex;
    padding: 10px;
}

.view-item image{
    align-self: center;
    width: 20px;
    height: 20px;
    margin-right: 15px;
}

.view-item text{
    flex: 1
}

button {
    background-color: #e4e4e4;
    font-size: 16px;
    margin: 30px;
}