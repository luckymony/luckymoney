/* pages/search/search.wxss */
.view-search{
    border: 1px solid #dadada;
    background-color: #fafafa;
    border-radius: 5px;
    display: flex;
    margin: 15px 15px 0px 15px;
    padding: 0px 15px;
    height: 40px;
}

.view-search input{
    flex: 1;
    align-self: center
}

.view-search icon{
    align-self: center;
}

.view-hot {
    color: #f7053e;
    margin-left: 15px;
    margin-top: 15px;
    font-size: 15px;
}

.view-hotkey {
    display: flex;
    flex-wrap: wrap;
    margin: 0px 15px;
}

.view-hotkey view {
    margin-top: 10px;
    margin-right: 15px;
    color: #fff;
    border-radius: 3px;
    text-align: center;
    padding: 3px 8px;
}

.search-history {
    z-index: 10;
    background-color: rgba(52, 52, 52, 0.5);
    width: 100%;
    height: 100%;
    position: absolute;
    opacity: 0;
}

.search-history > view{
    background-color: #fff;
    padding: 15px;
    font-size: 12px;
    color: #999;
}

.history-item {
    margin-top: 10px;
    font-size: 14px;
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    color: #3c3c3c;
}
