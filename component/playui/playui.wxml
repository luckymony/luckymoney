<view class="play-ui">
<view class="first-view">
<view class="one-view">
<view class="top-view">
<text>游戏限时</text>
<input value="{{activityTime}}" placeholder="120" type="number"/>
<text>秒</text>
</view>
<view class="line-dotted"></view>
</view>
<view class="two-view">
<view class="top-view">
<text>{{playType == 1 ? '点击红包' : '红包积分'}}</text>
<input value="{{emptyMoneyCount}}" placeholder="0" type="number"/>
<text>{{playType == 1 ? '个' : '分'}}</text>
</view>
<view class="line-dotted"></view>
</view>
<view class="three-view">
<view class="top-view">
<text>拥有机会</text>
<input value="{{chanceCount}}" placeholder="1" type="number"/>
<text>次</text>
</view>
<view class="line-dotted"></view>
</view>
<view class="four-view">
<view class="top-view">
<text>设置难度</text>
<block wx:for="{{difficulty}}" wx:key="{{index}}">
<button class="{{selectIndex == index ? 'selected' : 'default'}}" data-index="{{index}}"bindtap="difficultyTap">{{difficulty[index].name}}</button>
</block>
</view>
<view class="line-dotted"></view>
</view>
</view>
<view class="second-view">
<button type="primary" bindtap="editedTap">完成编辑</button>
</view>
</view>
