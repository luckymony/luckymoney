<view class="first-view">
<view class="zero-view">
<view class="top-view" bindtap="modeTap" id="{{modeName}}">
<text>玩法名字</text>
<input value="{{modeName}}" placeholder="选择名字" disabled="disabled"/>
<i-icon type="enter" size="20" color="#80848f"/>
</view>
<view class="line-dotted"></view>
</view>
<view class="one-view">
<view class="top-view" bindtap="activityTimeTap" id="{{activityTime}}">
<text>活动限时</text>
<input value="{{activityTime}}" placeholder="24小时" disabled="disabled"/>
<i-icon type="clock_fill" size="20" color="#80848f"/>
</view>
<view class="line-dotted"></view>
</view>
<view class="two-view">
<view class="top-view">
<text>空的红包</text>
<input value="{{emptyMoneyCount}}" placeholder="0" type="number"/>
<text>个</text>
</view>
<view class="line-dotted"></view>
</view>
<view class="three-view">
<view class="top-view">
<text>拥有机会</text>
<input value="{{chanceCount}}" placeholder="1" type="number"/>
<text>次</text>
</view>
<view class="line-dotted"></view>
</view>
<view class="four-view">
<view class="top-view">
<text>设置难度</text>
<block wx:for="{{difficulty}}" wx:key="{{index}}">
<button class="{{selectIndex == index ? 'selected' : 'default'}}" data-index="{{index}}"bindtap="difficultyTap">{{difficulty[index].name}}</button>
</block>
</view>
<view class="line-dotted"></view>
</view>
</view>

