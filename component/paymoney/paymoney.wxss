/* component/paymoney/paymoney.wxss */
.main-view {
  display: flex;
  flex-direction:column;
  padding-left: 5%;
  padding-right: 5%;
  width: 90%;
  height: 100%;
}

.one-line {
  flex: 1;
  display: flex; 
  flex-direction:column;
  width: 100%;
  margin-top: 10rpx;
}

.one-input {
  flex: 1;
  display:flex;
  align-items:center;
  justify-content: space-between;
  /* background-color: orange; */
}

.one-input input {
  width: 80%;
  height: 80%;
  /* background-color: red; */
}

.line-dotted {
  width: 100%;
  border-top: 1rpx solid #ccc;
}

.two-line {
  flex: 1;
  display: flex; 
  flex-direction:column;
  width: 100%;
  margin-top: 10rpx;
  /* background-color: blueviolet; */
}

.two-input {
  flex: 1;
  display:flex;
  align-items:center;
  justify-content: space-between;
  /* background-color: orange; */
}

.two-input input {
  flex: 1;
  margin-left: 20rpx;
  margin-right: 20rpx;
  height: 80%;
  text-align:right; 
  color: gray;
  /* background-color: greenyellow; */
}

.second-view {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.pay-button {
  margin-top: 20rpx;
  width: 50%;
  font-size: 40rpx;
  background:#EB5646;
  color: white;
}

.gray {
  background-color: #ccc;
  color: #eee
}